{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"rootDir": "src",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".", // This is the root of your project
		"paths": {
			"@app/*": ["src/app/*"],
			"@config/*": ["src/config/*"],
			"@core/*": ["src/core/*"],
			"@data/*": ["src/data/*"],
			"@enums/*": ["src/core/enums/*"],
			"@infrastructure/*": ["src/infrastructure/*"],
			"@net/*": ["src/net/*"],
			"@services/*": ["src/services/*"],
			"@strategies/*": ["src/strategies/*"],
			"@tasks/*": ["src/tasks/*"],
			"@utils/*": ["src/core/utils/*"]
		},
		"types": ["jest", "node"] // <-- Add jest and node types for testing
	},
	"include": [
		"src",
		"src/**/*.test.ts",
		"src/**/*.spec.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"src/**/__deprecated__*",
		"src/**/__unused__*",
		"src/app/__program__copy.ts",
		"src/bootstrap/index.ts"
	]
}